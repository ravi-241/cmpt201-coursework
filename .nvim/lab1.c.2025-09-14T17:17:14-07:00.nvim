#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main() {
  char *buff = NULL;
  size_t size = 0;
  ssize_t num_char = getline(&buff, &size, stdin);

  char *saveptr;
  char *ret = strtok_r(buff, " ", &saveptr);
  printf("Please Enter some text: ", &num_char,"\n");
  printf("Tokens: ");
  while (ret != NULL) {
    printf("%s\n", ret);
    ret = strtok_r(NULL, " ", &saveptr);
  }
  free(buff);
}
